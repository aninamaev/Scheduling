<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QqInfoProject.View.PasswordLoginPage"
             Padding="10,10,10,10"
             BackgroundColor="{Binding BackgroundColor}">
  <StackLayout VerticalOptions="StartAndExpand" Padding="0,40,0,0">
    <Image Aspect="AspectFill" Source="{Binding UserImageSource}" HorizontalOptions="CenterAndExpand" HeightRequest="85" WidthRequest="85"/>
    <Entry Placeholder="Introducere cod de logare" Keyboard="Numeric" TextColor="{Binding TextColor}" PlaceholderColor="{Binding ButtonBackgroundColor}"/>
    <Button Text="Autentificare" BackgroundColor="{Binding ButtonBackgroundColor}" TextColor="{Binding TextColor}" BorderColor="{Binding TextColor}" BorderWidth="1" Clicked="OnLoginButton"/>
  </StackLayout>
</ContentPage>